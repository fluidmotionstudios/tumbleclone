<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">
      <%= text_post.title %>
    </h3>
  </div>

  <div class="panel-body">
    <%= link_to time_ago_in_words(text_post.created_at), post_path(text_post) %>
    <p><em>By <%= text_post.user.name %></em></p>
    <%= text_post.body %>
<br/>
<br/>
    <% if text_post.user == current_user %>
      <p><%= link_to 'Edit', edit_text_post_path(text_post), class: "btn btn-default" %></p>
    <% end %>
  </div>

<br/>


</div>
